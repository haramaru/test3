 <div class="container">
   <div class="row">
     <div class="col-md-3">
      <div>
        <h1>User info</h1>
        <table class="table">
          <thead>
            <tr></tr>
          </thead>
          <tbody>
            <tr>
              <th><%= image_tag @book.user.get_profile_image(100,100) %></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@book.user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-cog"></i>
        <% end %>
      </div>
      <div>
        <h1>New book</h1>

        <%= form_with model: @newbook do |f| %>

          <p>Title<p>
          <%= f.text_field :title %>

          <p>Opinion<p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <p><%= @book.user.name %></p>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(@book), method: :delete, class:"btn btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
