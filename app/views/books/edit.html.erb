<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-control" %>
        <label for="inputOpinion">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion", class:"form-control" %>
        <%= f.submit "Update Book", class:"btn btn-success my-3" %>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
