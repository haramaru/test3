<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h1>User info</h1>
        <table class="table">
          <thead>
            <tr></tr>
          </thead>
          <tbody>
            <tr>
              <th><%= image_tag @user.get_profile_image(100,100) %></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-cog"></i>
        <% end %>
      </div>
      <div>
        <h1>New book</h1>

        <%= form_with model: @book do |f| %>

          <p>Title<p>
          <%= f.text_field :title %>

          <p>Opinion<p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


